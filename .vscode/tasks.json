{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "Make",
			"command": "make",
			"args": [
				"-j16"
			],
			"options": {
				"cwd": "${workspaceFolder}/Halide",
				"env": {"OPTIMIZE": "-O0 -g"}
			},
			"problemMatcher": "$gcc",
			"group": "build"
		},
		{
			"type": "process",
			"label": "MakeClean",
			"command": "make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}/Halide"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "UnitTest",
			"command": "g++ ${file} -g -I ../util  -I ../../../../Halide/include -L ../../../../Halide/bin -lHalide -lpthread -ldl -std=c++11 -DGPU",
			"options": {
				"cwd": "${workspaceFolder}/t2s/tests/performance/conv"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}